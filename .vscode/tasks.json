{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check Che operator compilation",
            "command": "GOOS=linux GOARCH=${ARCH} CGO_ENABLED=0 go build -mod=vendor -o /tmp/che-operator/che-operator cmd/manager/main.go",
            "options": {
                "env": {
                    "ARCH": "amd64"
                }
            },
            "type": "shell",
            "args": [],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Format che-operator code",
            "command": "go fmt ./...",
            "options": {
                "env": {
                    "ARCH": "amd64"
                }
            },
            "type": "shell",
            "args": [],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Update cr/crd files",
            "command": "./olm/update-crd-files.sh",
            "type": "shell",
            "args": [],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
